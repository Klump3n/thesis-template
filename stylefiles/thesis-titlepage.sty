% Define macros for the properties of the titlepage.
\newcommand*{\DefThesisTitle}{}
\newcommand*{\ThesisTitle}[1]{
  \renewcommand*{\DefThesisTitle}{#1}
  \hypersetup{pdftitle={#1}}
}

