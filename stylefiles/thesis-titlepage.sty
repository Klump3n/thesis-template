% Redefine the \maketitle macro.
\renewcommand*{\maketitle}{
  \begin{titlepage}
    \newgeometry{bottom=3cm,top=2.5cm,right=2.5cm,left=2.5cm}
    \sffamily
    \begin{center}
      { \Large
        \hrule
        \vspace{1em}
        \begin{center}
          \hspace*{1cm}\begin{minipage}[hbt]{10.5cm}
            {\DefThesisInstitute}

            {\DefThesisGroup}
          \end{minipage}
          \begin{minipage}[hbt]{2cm}
            \centering
            \DefThesisUniversityLogo
          \end{minipage}\hspace*{1cm}
        \end{center}
        \vspace{1em}
        \hrule 
      } 
      \vspace*{\stretch{20}}
      { 
        \LARGE\bfseries
        {\DefThesisTitle}\\
      }
      \vspace*{\stretch{12}}
      { \Large
        {\DefThesisDegree arbeit} \\ \vspace*{\stretch{5}}
        zur  Erlangung des akademischen Grades \\ \vspace*{\stretch{0.5}}
        {{\DefThesisDegree} of {\DefThesisDegreeClass} \\ \vspace*{\stretch{0.5}}
          ({\DefThesisDegreeShort}{\DefThesisDegreeClassShort})} \\ \vspace*{\stretch{0.5}}
